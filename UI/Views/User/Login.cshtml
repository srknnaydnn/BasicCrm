@model Entities.Users
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="container-fluid">
    <section class="row main">
        <section class="col-12 col-sm-6 col-md-3">

            <form class="form-container" asp-action="Login" asp-controller="User" method="post">
                <h3 class="font-weight-bold text-header">LOGİN</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">User Name</label>
                    <input type="text" class="form-control" placeholder="Username" asp-for="Username">
                    <span asp-validation-for="Username" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Username" class="alert-danger"></span>
                </div>
                <div class="form-group float-right">
                    <a href="/User/Register" class="font-weight-bold ">KAYIT OL</a>
                </div>


                <button type="submit" class="btn btn-primary">GİRİŞ</button>
            </form>
        </section>
    </section>
</section>

